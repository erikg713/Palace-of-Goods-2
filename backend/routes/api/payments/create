from flask import Blueprint, request, jsonify
from models import Payment
from flask_jwt_extended import jwt_required, get_jwt_identity

payment_bp = Blueprint('payment_bp', __name__)

@payment_bp.route('/create', methods=['POST'])
@jwt_required()
def create_payment():
    try:
        current_user_id = get_jwt_identity()
        data = request.get_json()
        amount = data.get('amount')
        payment_method = data.get('payment_method')

        # Assuming you have a Payment model
        new_payment = Payment(user_id=current_user_id, amount=amount, payment_method=payment_method, status='pending')
        new_payment.save()

        return jsonify({"message": "Payment created successfully", "payment_id": new_payment.id}), 201
    except Exception as e:
        return jsonify({"error": str(e)}), 500
