from flask import Blueprint, request, jsonify
from models import Payment
from flask_jwt_extended import jwt_required, get_jwt_identity

payment_bp = Blueprint('payment_bp', __name__)

@payment_bp.route('/complete', methods=['POST'])
@jwt_required()
def complete_payment():
    try:
        current_user_id = get_jwt_identity()
        data = request.get_json()
        payment_id = data.get('payment_id')
        amount = data.get('amount')

        # Assuming you have a Payment model
        payment = Payment.query.filter_by(id=payment_id, user_id=current_user_id).first()
        if not payment:
            return jsonify({"error": "Payment not found"}), 404

        # Update payment status to completed and save
        payment.status = 'completed'
        payment.amount = amount  # or any other relevant fields
        payment.save()

        return jsonify({"message": "Payment completed successfully"}), 200
    except Exception as e:
        return jsonify({"error": str(e)}), 500
